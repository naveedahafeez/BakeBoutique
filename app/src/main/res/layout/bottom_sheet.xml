<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/orderstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="22dp"
        android:fontFamily="@font/bold"
        android:layout_marginTop="10dp"
        android:text="Order status "/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/notification_icon_dispatched"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/shopping"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/order_dispatched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order is dispatched"
            android:fontFamily="@font/reg"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/notification_icon_on_way"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:src="@drawable/cargo"
            android:contentDescription="Notification Icon"
        />

        <TextView
            android:id="@+id/order_on_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order is on the way"
            android:textSize="16sp"
            android:fontFamily="@font/reg"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/notification_icon_delivered"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/shipped"
            android:contentDescription="Notification Icon" />

        <TextView
            android:id="@+id/order_delivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order is delivered"
            android:textSize="16sp"
            android:fontFamily="@font/reg"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp" />
    </LinearLayout>
</LinearLayout>
