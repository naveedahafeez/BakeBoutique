<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purplelight"
    android:padding="16dp">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Admin"
        android:textSize="24sp"
        android:layout_marginTop="50dp"
        android:textColor="@color/purple"
        android:fontFamily="@font/bold"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Pending Orders -->
    <LinearLayout
        android:id="@+id/pending_orders_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/welcome_text"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/custom_background"
            android:padding="16dp"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending Orders"
                android:fontFamily="@font/reg"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pending_orders_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Completed Orders -->
    <LinearLayout
        android:id="@+id/completed_orders_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/pending_orders_layout"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/custom_background"
            android:padding="16dp"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed Orders"
                android:fontFamily="@font/reg"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/completed_orders_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Total Earnings -->
    <LinearLayout
        android:id="@+id/total_earnings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/completed_orders_layout"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/custom_background"
            android:padding="16dp"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Earnings"
                android:fontFamily="@font/reg"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/total_earnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs0"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Admin Profile Button -->
    <Button
        android:id="@+id/admin_profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Profile"
        android:layout_below="@id/total_earnings_layout"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Add Item Button -->
    <Button
        android:id="@+id/add_item_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:layout_below="@id/admin_profile_button"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- View Items Button -->
    <Button
        android:id="@+id/view_items_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Items"
        android:layout_below="@id/add_item_button"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Add User Button -->
    <Button
        android:id="@+id/add_user_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add User"
        android:layout_below="@id/view_items_button"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_below="@id/add_user_button"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
